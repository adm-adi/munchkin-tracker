{
  "expo": {
    "name": "Munchkin Tracker",
    "slug": "munchkin-tracker",
    "version": "1.7.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "munchkintracker",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.admadi.munchkintracker",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "Munchkin Tracker usa la red local para conectar jugadores en la misma partida",
        "NSBonjourServices": [
          "_munchkin._tcp."
        ]
      }
    },
    "android": {
      "package": "com.admadi.munchkintracker",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_MULTICAST_STATE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a2e",
          "dark": {
            "backgroundColor": "#1a1a2e"
          }
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": false,
          "modes": [
            "centralManager",
            "peripheral"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": false
    },
    "extra": {
      "eas": {
        "projectId": "munchkin-tracker"
      }
    },
    "updates": {
      "url": "https://github.com/adm-adi/munchkin-tracker/releases"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}